<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Add Parking Lot"
        app:titleCentered="true"
        android:background="#1E88E5"
        android:theme="@style/ThemeOverlay.Material3.Dark" />

    <!-- CardView for Lot Name -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#FFFFFF"
        android:focusable="true"
        android:clickable="true"
        android:animateLayoutChanges="true">
        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lot Name"
            android:inputType="text"
            android:padding="16dp"
            android:focusableInTouchMode="true" />
    </androidx.cardview.widget.CardView>

    <!-- CardView for Type -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#FFFFFF"
        android:focusable="true"
        android:clickable="true"
        android:animateLayoutChanges="true">
        <EditText
            android:id="@+id/editType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type (Student/Staff)"
            android:inputType="text"
            android:padding="16dp"
            android:focusableInTouchMode="true" />
    </androidx.cardview.widget.CardView>

    <!-- CardView for Latitude -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#FFFFFF"
        android:focusable="true"
        android:clickable="true"
        android:animateLayoutChanges="true">
        <EditText
            android:id="@+id/editLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Latitude"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:focusableInTouchMode="true" />
    </androidx.cardview.widget.CardView>

    <!-- CardView for Longitude -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#FFFFFF"
        android:focusable="true"
        android:clickable="true"
        android:animateLayoutChanges="true">
        <EditText
            android:id="@+id/editLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Longitude"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:focusableInTouchMode="true" />
    </androidx.cardview.widget.CardView>

    <!-- CardView for Available Spots -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAvailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#FFFFFF"
        android:focusable="true"
        android:clickable="true"
        android:animateLayoutChanges="true">
        <EditText
            android:id="@+id/editAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Available Spots"
            android:inputType="number"
            android:padding="16dp"
            android:focusableInTouchMode="true" />
    </androidx.cardview.widget.CardView>

    <!-- CardView for Total Capacity -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCapacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#FFFFFF"
        android:focusable="true"
        android:clickable="true"
        android:animateLayoutChanges="true">
        <EditText
            android:id="@+id/editCapacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Capacity"
            android:inputType="number"
            android:padding="16dp"
            android:focusableInTouchMode="true" />
    </androidx.cardview.widget.CardView>

    <!-- CardView for the Save button with Ripple effect -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#1E88E5"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true">
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
